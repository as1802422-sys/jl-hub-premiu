-- Separador bonito
local function NovoSeparador(y)
    local box = Instance.new("Frame", MainFrame)
    box.Size = UDim2.new(1, -48, 0, 2)
    box.Position = UDim2.new(0, 24, 0, y)
    box.BorderSizePixel = 0
    box.BackgroundColor3 = Color3.fromRGB(35,60,38)
    box.BackgroundTransparency = 0.36
    box.ZIndex = 11
    return box
end
NovoSeparador(58)

-- Abas
local Tabs = {"Menu","Aimbot","Configura√ß√£o"}
local TabButtons, ContentFrames = {}, {}
local currentTab = "Menu"

local function createTabButton(name, i)
    local btn = Instance.new("TextButton")
    btn.Size, btn.Position = UDim2.new(0, 130, 0, 40), UDim2.new(0,28 + 150*(i-1),0,68)
    btn.Text = name
    btn.Font = Enum.Font.GothamBold
    btn.BackgroundColor3 = Color3.fromRGB(44, 56, 62)
    btn.TextColor3 = Color3.fromRGB(217, 255, 184)
    btn.BorderSizePixel = 0
    btn.ZIndex = 12
    local r = Instance.new("UICorner", btn)
    r.CornerRadius = UDim.new(0,12)
    btn.Parent = MainFrame
    TabButtons[#TabButtons+1]=btn
    btn.MouseEnter:Connect(function() TweenService:Create(btn,TweenInfo.new(.13),{BackgroundColor3=Color3.fromRGB(63, 92, 71)}):Play() end)
    btn.MouseLeave:Connect(function()
        if currentTab ~= name then TweenService:Create(btn,TweenInfo.new(.13),{BackgroundColor3=Color3.fromRGB(44,56,62)}):Play() end
    end)
    btn.Mouse
